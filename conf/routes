# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Boards
GET    /Boards                      @controllers.BoardsController.all()
GET    /Boards/:id                  @controllers.BoardsController.get(id: String)

PUT   /Boards/:id                   @controllers.BoardsController.update(id: String)

#User
GET   /UserLogin                    @controllers.UserController.login(name: String ?= "",password: String ?= "")
GET   /User/:id/Boards              @controllers.UserController.getUserBoards(id: String)

POST  /User                         @controllers.UserController.createUser()

# Home page
GET     /                           @controllers.Application.main(any = "none")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /*any                       @controllers.Application.main(any)
