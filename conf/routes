# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Boards
GET    /Boards                      @controllers.BoardsController.all()
GET    /Boards/:id                  @controllers.BoardsController.get(id: String)
GET    /Boards/:id/Users            @controllers.BoardsController.getAllUsers(id: String)

PUT   /Boards/:id                   @controllers.BoardsController.update(id: String)

POST  /Boards                       @controllers.BoardsController.create()
#User
GET   /UserLogin                    @controllers.UserController.login(name: String ?= "",password: String ?= "")
GET   /User/:id/Boards              @controllers.UserController.getUserBoards(id: String)
GET   /User/:id                     @controllers.UserController.getUser(id: String)
GET   /User                         @controllers.UserController.getUsersByFilter(name: String ?= "")


POST  /User                         @controllers.UserController.create()
PUT   /User/:id                     @controllers.UserController.update(id: String)
# Home page
GET     /                           @controllers.Application.main(any = "none")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /*any                       @controllers.Application.main(any)
